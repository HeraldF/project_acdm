<h1>Category</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Created on</th>
	</tr>

		<tbody>
			<% if @categorys.count == 0 %>
				<p>Not Registered Categorys</p>
			<% else %>
				<h2>There is <% @categorys.size %> categorys registered</h2>
		
				<% @categorys.each do |category| %>

					<tr>
						<td> <%= category.name %> </td>
						<td> <%= category.description %> </td>
						<td> <%= teacher.created_at %> </td>
						<td> <%= link_to :show, category_path(teacher) %> </td>
						<td> <%= link_to :edit, edit_category_path(category) %> </td>
						<td> <%= link_to :delete, category, method: :delete, data: {confirm: "Are you sure?"} %> </td>
					</tr>

				<% end %>
			<% end %>
		</tbody>
</table>
<br>
<%= link_to :new, new_category_path %>