<h1 class="well"><strong><%= @course.name %></strong></h1>

<%= form_for @course do |f| %>

	<div class="form-group col-xs-8">
		<%= f.label :name %><br>
		<%= f.text_field :name, :placeholder => :name, :class => "form-control", disabled: true %>
	</div>

	<div class="form-group col-xs-4">
		<%= f.label :category %><br>
		<%= select_tag :category, options_from_collection_for_select(@category, "id", "name"), :class => "form-control", disabled: true %>
	</div>

	<div class="form-group col-xs-6 disabled">
		<%= f.label :workload %><br>
		<%= f.number_field :workload, :placeholder => :workload, :class => "form-control", disabled: true %>
	</div>

	<div class="form-group col-xs-6">
		<%= f.label :value %><br>
		<%= f.number_field :value, :placeholder => :value, :class => "form-control", disabled: true %>	
	</div>

	<div class="form-group col-xs-12">
		<%= f.label :description %><br>
		<%= f.text_field :description, :placeholder => :description, :class => "form-control", disabled: true %>
	</div>
<% end %>

<div class="action col-xs-12">
	<%= link_to :Edit, edit_course_path, :class => "btn btn-warning btn-lg" %>
	<%= link_to :Back, courses_path, :class => "btn btn-danger btn-lg" %>
</div>