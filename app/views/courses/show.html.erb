<section id="course-show" class="container">
	<div class="page-header">
		<h1>Show <strong><%= @course.name %></strong> </h1>
	</div>

	<div id="course-img">
		<%= image_tag @course.course_img_url(:large).to_s, :class=>"img-responsive" if @course.course_img? %>
	</div>

	<div class="form-group">
		<p> <strong>Name:</strong><br>
			<%= @course.name %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>Category:</strong><br>
			<%= @course.category.name %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>Workload:</strong><br>
			<%= @course.workload %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>Price:</strong><br>
			<%= @course.value %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>Description:</strong><br>
			<%= @course.description %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>created at:</strong><br>
			<%= @course.created_at %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>Updated at:</strong><br>
			<%= @course.updated_at %>
		</p>
	</div>

	<% if user_signed_in? %>
	<%= link_to :Edit, edit_course_path, :class => "btn btn-warning btn-lg" %>
		<%= link_to :Back, courses_path, :class => "btn btn-danger btn-lg" %>
	<% else %>
		<%= link_to :Back, root_path, :class => "btn btn-danger btn-lg" %>
	<% end %>
</section>

