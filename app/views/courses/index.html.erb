<div class="page-header">
	<h1>Course</h1>
</div>
 <p class="text.right"><strong> Total: </strong><%= @courses.size %></p>

<table class="table table-hover table-condensed table-striped">
	<thead>
	<tr>
		<th>Name</th>
		<th>Workload</th>
		<th>Value</th>
		<th>Description</th>
		<th>Created on</th>
		<th colspan="3">Action</th>
	</tr>
	</thead>

	<tbody>
		<% if @courses.count == 0 %>
			<tr>
				<td class="6" class="danger">
					<p class="text-center text-default"><strong> Você não
						possui alunos cadastrados.</strong></p>
				</td>
			</tr>
		
				<% @courses.each do |course| %>

					<tr>
						<td> <%= course.name %> </td>
						<td> <%= course.workload %> </td>
						<td> <%= course.value %> </td>
						<td> <%= course.description %> </td>
						<td> <%= course.created_at %> </td>
						<td> <%= link_to :show, course_path(course) %> </td>
						<td> <%= link_to :edit, edit_course_path(course) %> </td>
						<td> <%= link_to :delete, course, method: :delete, data: {confirm: "Are you sure?"} %> </td>
					</tr>

				<% end %>
			<% end %>
		</tbody>
</table>
<br>
<%= link_to :New, new_course_path %>