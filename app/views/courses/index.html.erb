<section id="course-index">
<div class="page-header">
	<h1>Course</h1>
</div>
	<p class="text-right"><strong> Total Courses: </strong><%= @courses.size %></p>

<table class="table table-hover table-condensed table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Created on</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>

	<tbody>
		<% if @courses.count == 0 %>
			<tr>
				<td colspan="8" class="danger">
					<p class="text-center text-default"><strong> No Courses Registered.</strong></p>
				</td>
			</tr>
		<% end %>
		
		<% @courses.each do |course| %>
			<tr>
				<td><%= course.id %></td>
				<td><%= course.name %></td>
				<td><%= course.description %></td>
				<td><%= course.created_at %></td>
				<td>
					<%= link_to :Show, course_path(course), :class => "btn btn-info" %>
					<%= link_to :Edit, edit_course_path(course), :class => "btn btn-warning" %>
					<%= link_to :Delete, course, method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="well clearfix">
	<%= link_to :New, new_course_path, :class => "btn btn-success btn-lg pull-right" %>
</div>
</section>