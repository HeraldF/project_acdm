<% if @course.errors.any? %>
	<div class="alert panel panel-danger danger">
		<div class="panel-heading">
			<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
			It was not possible to complete the entries due to the following errors:
		</div>
		<div class="panel-body">
			<ul>
				<% @course.erros.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>

<%= form_for @course do |f| %>
	<div class ="form-group">
		<%= f.label :name %> <br>
		<%= f.text_field :name, :placeholder => :name, :class => "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :workload %> <br>
	<%= f.text_field :workload, :placeholder => :workload, :class => "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :value %> <br>
	<%= f.text_field :value, :placeholder => :value, :class => "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :description %> <br>
	<%= f.text_field :description, :placeholder => :description, :class => "form-control" %>
	</div>

	<%= f.submit :Save, :class => "btn-sucess btn-lg" %>
	<%= link_to :Back, courses_path, :class => "btn btn-danger btn-lg btn-tight" %>
<% end %>
<hr>