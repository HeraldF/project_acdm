<% if @course.errors.any? %>
	<div class="alert panel panel-danger danger">
		<div class="panel-heading">
			<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
			It was not possible to complete the entries due to the following errors:
		</div>
		<div class="panel-body">
			<ul>
				<% @course.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>

<%= form_for @course do |f| %>

	<div class = "form-group">
		<%= image_tag @course.course_img_url(:large).to_s, :class=>"img-responsive" if @course.course_img?%>
		<%= f.file_field :course_img, :class => "" %>

<!-- 	    <label>
	      <%#= f.check_box :remove_course_img! %>
	      Remove Image
	    </label> -->
	</div>

	<div class ="form-group col-xs-8">
		<%= f.label :name %> <br>
		<%= f.text_field :name, :placeholder => :name, :class => "form-control" %>
	</div>

	<div class="form-group col-xs-4" id="select_cat">
		<%= f.label :category %><br>
		<%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {:class => "form-control"} %>
	</div>

	<div class="form-group col-xs-6">
		<%= f.label :workload %><br>
		<%= f.number_field :workload, :placeholder => :workload, :class => "form-control" %>
	</div>

	<div class="form-group col-xs-6">
		<%= f.label :value %><br>
		<%= f.number_field :value, min:"0", max:"9999", step:"0.01", size:"4", :class=> "form-control" %>
	</div>

	<div class="form-group col-xs-12">
	<%= f.label :description %> <br>
	<%= f.text_area :description, :placeholder => :description, :class => "form-control" %>
	</div>

	<%= f.submit :Save, :class => "btn btn-success btn-lg" %>
	<%= link_to :Back, courses_path, :class => "btn btn-danger btn-lg btn-tight" %>
<% end %>
