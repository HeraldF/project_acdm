<h1 class="well"><strong><%= @teacher.user_name %></strong> </h1>

<%= form_for @teacher do |f| %>

	<div class="form-group">
		<%= f.label :full_name %> <br>
		<%= f.text_field :full_name, :placeholder => :full_name, :class => "form-control", disabled: true %>
	</div>

	<div class="form-group">
		<%= f.label :user_name %> <br>
		<%= f.text_field :user_name, :placeholder => :user_name , :class => "form-control", disabled: true %>
	</div>

	<div class="form-group">
		<%= f.label :email %> <br>
		<%= f.text_field :email, :placeholder => :email , :class => "form-control", disabled: true %>
	</div>

	<div class="form-group">
		<%= f.label :created_at %> <br>
		<%= f.text_field :created_at, :placeholder => :created_at , :class => "form-control", disabled: true %>
	</div>

	<div class="form-group">
		<%= f.label :updated_at %> <br>
		<%= f.text_field :updated_at, :placeholder => :updated_at, :class => "form-control", disabled: true %>
	</div>
<% end %>

<%= link_to :edit, edit_teacher_path, :class => "btn btn-warning btn-lg" %>
<%= link_to :back, teachers_path, :class => "btn btn-danger btn-lg" %>