<section id="student-index" class="container">
<div class="page-header">
	<h1>Student</h1>
</div>
	<p class="text-right"><strong>Total Student:</strong> <%= @students.size %></p>

<table class="table table-hover table-condensed table-striped">
	<thead>
		<tr>	
			<th>ID</th>
			<th>Student </th>
			<th>Email </th>
			<th>Created at</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>

	<tbody>
		
		<% if @students.count == 0 %>
			<tr>
				<td colspan="6" class="danger">
					<p class="text-center text-default"><strong> No student registered.</strong></p>
				</td>
			</tr>
		<% end %>		

		<% @students.each do |student| %>
			<tr>
				<td><%= student.id %></td>
				<td><%= student.user_name %></td>
				<td><%= student.email %></td>
				<td><%= student.created_at %></td>
				<td>
					<%= link_to :Show, student_path(student), :class => "btn btn-info"  %>
					<%= link_to :Edit, edit_student_path(student), :class => "btn btn-warning" %>
					<%= link_to :Delete, student, method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="well clearfix">
	<%= link_to :New, new_student_path, :class => "btn btn-success btn-lg pull-right" %>
</div>
</section>