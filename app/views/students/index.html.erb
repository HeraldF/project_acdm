<% if notice %>
	<div class="alert alert-success fade in">
		<strong>
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		<p><%= notice %></p>
		</strong>
	</div>
<% end %>

<div class="page-header">
  <h1>Alunos</h1>
</div>
 <p class="text-right"><strong>Total:</strong> <%= @students.size %></p>

<table class="table table-hover table-condensed table-striped">
	<thead>
		<th>Id</th>
		<th>Student </th>
		<th>Email </th>
		<th>Created at</th>
		<th colspan="3">Action</th>
	</thead>

	<tbody>
		
			<% if @students.count == 0 %>
				<tr>
					<td colspan="6" class="danger">
						<p class="text-center text-default"><strong> Você não possui alunos cadastrados.</strong></p>
					</td>
				</tr>
			<% end %>		

			<% @students.each do |student| %>
				<tr>
					<td>#<%= student.id %></td>
					<td><%= student.user_name %></td>
					<td><%= student.email %></td>
					<td><%= student.created_at %></td>
					<td>
						<%= link_to :show, student_path(student), :class => "btn btn-info"  %>
						<%= link_to :edit, edit_student_path(student), :class => "btn btn-warning" %>
						<%= link_to :delete, student, method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %>
					</td>
				</tr>
			<% end %>
	</tbody>
</table>

<div class="well clearfix">
	<%= link_to :new, new_student_path, :class => "btn btn-success btn-lg pull-right" %>
</div>