<h1 class="well"><strong><%= @student.full_name %></strong> </h1>

<%= form_for @student do |f| %>

	<div class="form-group">
		<%= f.label :full_name %> <br>
		<%= f.text_field :full_name, :placeholder => :full_name, :class => "form-control", disabled: true %>
	</div>

	<div class="form-group">
		<%= f.label :user_name %> <br>
		<%= f.text_field :user_name, :placeholder => :user_name , :class => "form-control", disabled: true %>
	</div>

	<div class="form-group">
		<%= f.label :email %> <br>
		<%= f.text_field :email, :placeholder => :email , :class => "form-control", disabled: true %>
	</div>

	<div class="form-group">
		<%= f.label :password %> <br>
		<%= f.text_field :password, :placeholder => :password , :class => "form-control", disabled: true %>
	</div>
<% end %>

<%= link_to :edit, edit_student_path, :class => "btn btn-warning btn-lg" %>
<%= link_to :back, students_path, :class => "btn btn-danger btn-lg" %>