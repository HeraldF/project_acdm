<%= form_for @student do |f| %>

	<div class="form-group">
		<%= f.label :full_name %> <br>
		<%= f.text_field :full_name, :placeholder => :full_name, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :user_name %> <br>
		<%= f.text_field :user_name, :placeholder => :user_name , :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :email %> <br>
		<%= f.text_field :email, :placeholder => :email , :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :password %> <br>
		<%= f.text_field :password, :placeholder => :password , :class => "form-control" %>
	</div>
	
	<%= f.submit :save, :class => 'btn btn-success btn-lg', data: { :toggle => "tooltip"}, :title => :save %>
	<%= link_to :back, students_path, :class=> "btn btn-danger btn-lg btn-right" %>
<% end %>