<h1 class="well"><strong><%= @category.name %></strong></h1>

<%= form_for @category do |f| %>

	<div class="form-group">
		<%= f.label :name%> <br>
		<%= f.text_field :name, :placeholder => :name, :class => "form-control", disabled: true %>
	</div>
	
	<div class="form-group">
		<%= f.label :description %> <br>
		<%= f.text_field :description, :placeholder => :description, :class => "form-control", disabled: true %>
	</div>
<% end %>

<%= link_to :Edit, edit_category_path, :class => "btn btn-warning btn-lg" %>
<%= link_to :Back, categories_path, :class => "btn btn-danger btn-lg" %>