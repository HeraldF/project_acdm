<section id="category-show" class="container">
	<div class="page-header">
		<h1>Show <strong><%= @category.name %></strong> </h1>
	</div>

	<div class="form-group">
		<p> <strong>Name:</strong><br>
			<%= @category.name %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>Description:</strong><br>
			<%= @category.description %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>created at:</strong><br>
			<%= @category.created_at %>
		</p>
	</div>

	<div class="form-group">
		<p> <strong>Updated at:</strong><br>
			<%= @category.updated_at %>
		</p>
	</div>

	<%= link_to :Edit, edit_category_path, :class => "btn btn-warning btn-lg" %>
	<%= link_to :Back, categories_path, :class => "btn btn-danger btn-lg" %>
</section>
