<div class="page-header">
<h1>Category</h1>
</div>
<p class="text-right"><strong>Total:</strong><%= @teachers.size%> </p>

<table class="table table-hover table-condensed table-striped">
	<thead>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Created on</th>
		<th colspan="3">Action</th>
	</tr>
	</thead>
		<tbody>

			<% if @categories.count == 0 %>
				<tr>
					<td colspan="6" class="danger">
						<p class="text-center text-defalt"><strong> Not Registered Categories</strong></p>
					</td>
				</tr>
			<% end %>	

			<% @categories.each do |category| %>

					<tr>
						<td> <%= category.id %> </td>
						<td> <%= category.name %> </td>
						<td> <%= category.description %> </td>
						<td> <%= category.created_at %> </td>
						<td> <%= link_to :show, category_path(category), :class => "btn btn-info" %> </td>
						<td> <%= link_to :edit, edit_category_path(category), :class => "btn btn-warning" %> </td>
						<td> <%= link_to :delete, category, method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %> </td>
					</tr>

				<% end %>
			<% end %>
		</tbody>
</table>
<br>
<div class="well clearfix">
	<%= link_to :New, new_category_path, :class => "btn btn-success btn-lg pull-right" %>