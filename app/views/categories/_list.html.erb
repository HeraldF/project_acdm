<table class="table table-hover table-condensed table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Created at</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>
	
	<tbody>

		<% if @categories.count == 0 %>
			<tr>
				<td colspan="6" class="danger">
					<p class="text-center text-defalt"><strong> No Categories Registered.</strong></p>
				</td>
			</tr>
		<% end %>	

		<% @categories.each do |category| %>
			<tr>
				<td> <%= category.id %> </td>
				<td> <%= category.name %> </td>
				<td> <%= category.description %> </td>
				<td> <%= category.created_at %> </td>
				<td>
					<%= link_to :Show, category_path(category), :class => "btn btn-info" %>
					<%= link_to :Edit, edit_category_path(category), :class => "btn btn-warning" %>
					<%= link_to :Delete, category, method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %> 
				</td>
			</tr>
		<% end %>
	</tbody>
</table>